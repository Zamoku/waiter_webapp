<style>

</style>
<div>
	<form class="container sm" action="/schedule/{{name}}" method="POST">
		<div class="">


			{{#if messages.welcomeback}}
			<div class="alert alert-success text-center">
				<p id="successMessage"> {{messages.welcomeback}}</p>

			</div>
			{{/if}}


			<div class="forfont text-center">
				<h4><strong><u>Hi <span class="text-warning">{{name}},</span> please select the days that you would like
							to work on:</u></strong><br></h4>
			</div>
			<br>

			<div class="day">
				<div class="pickdays">
					<div class="checkbox checkbox-success day"><input class="gap-2" type="checkbox" name="days"
							value="Monday" {{#if monday}}checked{{/if}}>Monday</div>
					<div class="checkbox checkbox-success day"><input type="checkbox" name="days" value="Tuesday" {{#if
							tuesday}}checked{{/if}}>Tuesday</div>
					<div class="day checkbox checkbox-success"><input type="checkbox" name="days" value="Wednesday"
							{{#if wednesday}}checked{{/if}}>Wednesday</div>
					<div class="checkbox day"><input type="checkbox" name="days" value="Thursday" {{#if
							thursday}}checked{{/if}}>Thursday</div>
					<div class="checkbox day"><input type="checkbox" name="days" value="Friday" {{#if
							friday}}checked{{/if}}>Friday</div>
					<div class="checkbox day"><input type="checkbox" name="days" value="Saturday" {{#if
							saturday}}checked{{/if}}>Saturday</div>
					<div class="checkbox day"><input type="checkbox" name="days" value="Sunday" {{#if
							sunday}}checked{{/if}}>Sunday</div><br>
				</div>
				<div class="pickbuttons">
					<button class="btn btn-lg btn-success" type="submit">Schedule</button>
					<a class="btn btn-lg btn-danger" href="/" type="" name="">Logout</a>
				</div>


			</div>
		</div>
	</form>
	<br>
	<div class="pop_up_msg">
		{{#if messages.success}}
		<div id="successMessage" class="alert alert-succ text-center">
			<p> {{messages.success}}</p>
			<script
				type="text/javascript">window.setTimeout("document.getElementById('successMessage').style.display='none';", 3000); </script>
		</div>
		{{/if}}

		{{#if messages.error}}
		<div id="successMessage" class="alert alert-error text-center">
			<p id="successMessage"> <b>{{messages.error}}</b></p>
			<script
				type="text/javascript">window.setTimeout("document.getElementById('successMessage').style.display='none';", 2000); </script>

		</div>
		{{/if}}
	</div>
</div>