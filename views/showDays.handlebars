<form action="/showScheduledDays/{{name}}" method="POST">
	<div>


		<h2>Hi {{name}}, below is the schedule for available waiters:</h2> <br>

	
	<input type="text" name="days">{{getDay}}</div>
		<table class="table table-striped table-warning table-hover table-responsive-md w-auto">

		

			{{#each getDays}}
			<th class="{{color}}" value= "{{id}}" name = "day_id">{{day}}</th>
			{{/each}}
<tr>
		<td>

				{{#each monday}}
				{{name}} <br>
				{{/each}}
				<a class="delete_btn" href="/schedule/{{name}}" type="" name="day_id">Remove waiters for Monday</a><br>
				<a class="admin" href="/schedule/{{name}}" type="" name="admin">Reschedule waiters for Monday</a> <br>
		
			</td>

			<td>
				{{#each tuesday}}
				{{name}} <br>
				{{/each}}
				<a class="delete_btn" href="/resetDay" va type="" name="day_id">Remove waiters for Tuesday</a>
			</td>
			<td>
				{{#each wednesday}}
				{{name}} <br>
				{{/each}}
				<a class="delete_btn" href="/schedule/{{name}}" type="" name="delete_btn">Remove waiters for Wednesday</a></span>
			</td>
			<td>
				{{#each thursday}}
				{{name}} <br>
				{{/each}}
				<a class="delete_btn" href="/schedule/{{name}}" type="" name="delete_btn">Remove waiters for Thursday</a></span>
			</td>
			<td>
				{{#each friday}}
				{{name}} <br>
				{{/each}}
				<a class="delete_btn" href="/resetDay" type="" name="delete_btn">Remove waiters for Friday</a></span>
			</td>
			<td>
				{{#each saturday}}
				{{name}} <br>
				{{/each}}
				<a class="delete_btn" href="/resetDay" type="" name="delete_btn">Remove waiters for Monday</a><br>
